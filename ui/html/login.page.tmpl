{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        <title>{{block "title" .}}{{end}}</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #f8f9fa;
            }

            section {
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            }
        </style>
    </head>
    <body>
        <section>
            {{block "body" .}}{{end}}
        </section>
    </body>
</html>
{{end}}
<h1 style=" color: grey; text-align: center; padding: 90px; letter-spacing: 10px;">LET'S SPLIT IT</h1>
<h3 style=" color: grey; text-align: center; letter-spacing: 4px;">Login</h3>
{{template "base" .}}
{{define "title"}}Login{{end}}
{{define "body"}}
<form action='/login' method='POST' novalidate style="max-width: 300px; margin: auto;">
    
    <div>
        <label style="display: block; margin-bottom: 5px; font-size: 12px">Email:</label>
        <input type='email' name='username' style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;">
    </div>
    <div>
        <label style="display: block; margin-bottom: 5px;  font-size: 12px">Password:</label>
        <input type='password' name='password' style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;">
    </div>
    <div>
        <input type='submit' value='Login' style="background-color: #007bff; color: #fff; cursor: pointer; width: 100%; padding: 10px; margin-bottom: 10px; border: none; border-radius: 5px;">
    </div>
</form>
{{end}}