{{template "base" .}}
{{define "title"}}Login{{end}}
{{define "body"}}
<div>
    {{with .Flash}}
        <div class="flash">{{.}}</div>
    {{end}}
</div>
<form action='/login' method='POST' novalidate>
    <div>
        <label>Email:</label>
        <input type='email' name='email' required>
    </div>
    <div>
        <label>Password:</label>
        <input type='password' name='password' required>
    </div>
    <div>
        <input type='submit' value='Login'>
    </div>
</form>
{{end}}